<?xml version="1.0" encoding="UTF-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0" class="in-text" default-locale="pt-BR">
  <info>
    <title>UFPR – ABNT (2024)</title>
    <title-short>UFPR ABNT</title-short>
    <id>http://www.zotero.org/styles/ufpr-abnt-2024</id>
    <link href="http://www.zotero.org/styles/ufpr-abnt-2024" rel="self"/>
    <link href="https://www.abnt.org.br/" rel="documentation"/>
    <author>
      <name>Universidade Federal do Paraná (UFPR)</name>
    </author>
    <category citation-format="author-date"/>
    <category field="generic-base"/>
    <updated>2025-10-27T00:00:00+00:00</updated>
    <rights>CC BY-SA 3.0</rights>
  </info>

  <locale xml:lang="pt-BR">
    <terms>
      <term name="accessed">Acesso em</term>
      <term name="available at">Disponível em</term>
      <term name="edition">ed.</term>
      <term name="page" form="short">p.</term>
      <term name="volume" form="short">v.</term>
      <term name="number" form="short">n.</term>
      <term name="and">; </term>
    </terms>
  </locale>

  <!-- Macros -->
  <macro name="author">
    <names variable="author" delimiter=", ">
      <name form="long" name-as-sort-order="all"/>
    </names>
  </macro>

  <macro name="editor">
    <names variable="editor" prefix=" In: " delimiter=", ">
      <name form="long" name-as-sort-order="all"/>
    </names>
  </macro>

  <macro name="issued">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <macro name="title">
    <text variable="title" font-weight="bold"/>
  </macro>

  <macro name="container-title">
    <text variable="container-title"/>
  </macro>

  <macro name="publisher">
    <group delimiter=": ">
      <text variable="publisher-place"/>
      <text variable="publisher"/>
    </group>
  </macro>

  <macro name="access">
    <group delimiter=". ">
      <text term="available at" text-case="capitalize-first" suffix=": "/>
      <text variable="URL"/>
      <group delimiter=" ">
        <text term="accessed" text-case="capitalize-first" suffix=": "/>
        <date variable="accessed">
          <date-part name="day" suffix=" "/>
          <date-part name="month" form="short" suffix=". "/>
          <date-part name="year"/>
        </date>
      </group>
    </group>
  </macro>

  <!-- Citation style -->
  <citation collapse="year" et-al-min="4" et-al-use-first="3" disambiguate-add-year-suffix="true">
    <layout prefix="(" suffix=")" delimiter="; ">
      <group delimiter=", ">
        <text macro="author"/>
        <text macro="issued"/>
      </group>
    </layout>
  </citation>

  <!-- Bibliography style -->
  <bibliography hanging-indent="false" et-al-min="4" et-al-use-first="3" line-spacing="1" entry-spacing="1" delimiter-precedes-last="always">
    <sort>
      <key macro="author"/>
      <key macro="issued"/>
    </sort>
    <layout>
      <group delimiter=". ">
        <text macro="author" suffix=". "/>
        <text macro="title" suffix=". "/>
        <choose>
          <if type="chapter paper-conference" match="any">
            <text macro="editor" suffix=". "/>
            <text macro="container-title" font-weight="bold" suffix=". "/>
            <text macro="publisher" suffix=", "/>
            <text variable="page" prefix="p. "/>
          </if>
          <else-if type="article-journal article-magazine article-newspaper" match="any">
            <text macro="container-title" suffix=", "/>
            <group delimiter=", ">
              <text variable="volume" prefix="v. "/>
              <text variable="issue" prefix="n. "/>
              <text variable="page" prefix="p. "/>
            </group>
          </else-if>
          <else>
            <text macro="publisher" suffix=", "/>
          </else>
        </choose>
        <text macro="issued" suffix="."/>
        <text macro="access" prefix=" "/>
      </group>
    </layout>
  </bibliography>

</style>
